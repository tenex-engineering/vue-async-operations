{
  "extends": "./tsconfig.base.json",
  "include": ["./src/**/*", "./src/**/*.vue"],
  "exclude": ["./src/**/*.spec.*", "./src/testing/**/*"],

  "compilerOptions": {
    "paths": {
      "#package/*": ["./src/*"]
    },

    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.web.tsbuildinfo",

    "lib": ["ES2023", "DOM", "DOM.Iterable"],

    "types": []
  }
}
