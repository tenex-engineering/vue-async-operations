{
  "compilerOptions": {
    // Base Options:
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,

    // Transpilation
    "module": "Node16",

    // DOM is needed to auto import modules with node protocol
    "lib": ["ES2023", "DOM"],

    // Ensure color and formatting when compiler output is piped, e.g. through Docker
    "pretty": true
  }
}
